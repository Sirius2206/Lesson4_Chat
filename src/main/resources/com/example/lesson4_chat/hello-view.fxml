<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lesson4_chat.Chat_Controller">


    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false"/>
    <TextField fx:id="messageField" VBox.vgrow="ALWAYS" onAction="#onSendButtonClick"/>
    <Button text="Send" onAction="#onSendButtonClick"/>
</VBox>
